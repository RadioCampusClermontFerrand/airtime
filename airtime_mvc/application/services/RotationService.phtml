<?php

class Application_Service_RotationService {

    /**
     *
     * @param int $id
     *
     * @return Rotation
     */
    public function retrieve($id) {
        return RotationQuery::create()->findPk($id);
    }

    /**
     *
     * @param string $data
     */
    public function create($data) {
        $rotation = new Rotation();
        $rotation = $rotation->fromJSON($data);
        $rotation->save();
    }

    /**
     *
     * @param int $id
     * @param string $data
     * @return Rotation
     */
    public function update($id, $data) {
        $rotation = RotationQuery::create()->findPk($id);
        if (empty($rotation)) {
            return null;
        }
        $rotation = $rotation->fromJSON($data);
        $rotation->save();
        return $rotation;
    }

    /**
     *
     * @param $id
     *
     * @return boolean
     */
    public function delete($id) {
        $rotation = RotationQuery::create()->findPk($id);
        if (empty($rotation)) {
            return false;
        }
        $rotation->delete();
        return true;
    }

}